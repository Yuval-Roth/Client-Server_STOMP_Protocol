CFLAGS:=-g -Wall -Weffc++  -std=c++11 -c -Iinclude
LDFLAGS:=-lboost_system -lpthread

bin/StompWCIClient: bin/StompClient.o bin/event.o bin/Frames.o bin/ExecutableFrames.o bin/ConnectedFrame.o bin/ConnectionFrame.o bin/DisconnectFrame.o bin/ErrorFrame.o bin/MessageFrame.o bin/ReceiptFrame.o bin/SendFrame.o bin/SubscribeFrame.o bin/UnsubscribeFrame.o bin/ConnectionHandler.o 
	g++ -o bin/*

bin/ConnectionHandler.o: src/ConnectionHandler.cpp
	g++ $(CFLAGS) bin/ConnectionHandler.o src/ConnectionHandler.cpp

bin/event.o: src/event.cpp
	g++ $(CFLAGS) bin/event.o src/event.cpp

bin/StompClient.o: src/StompClient.cpp
	g++ $(CFLAGS) bin/StompClient.o src/StompClient.cpp

bin/Frames.o: src/Frames.cpp
	g++ $(CFLAGS) bin/Frames.o src/Frames.cpp

bin/ExecutableFrames.o: src/ExecutableFrames.cpp
	g++ $(CFLAGS) bin/ExecutableFrames.o src/ExecutableFrames.cpp

bin/ConnectedFrame.o: src/ConnectedFrame.cpp
	g++ $(CFLAGS) bin/ConnectedFrame.o src/ConnectedFrame.cpp

bin/ConnectionFrame.o: src/ConnectionFrame.cpp
	g++ $(CFLAGS) bin/ConnectionFrame.o src/ConnectionFrame.cpp

bin/DisconnectFrame.o: src/DisconnectFrame.cpp
	g++ $(CFLAGS) bin/DisconnectFrame.o src/DisconnectFrame.cpp

bin/ErrorFrame.o: src/ErrorFrame.cpp
	g++ $(CFLAGS) bin/ErrorFrame.o src/ErrorFrame.cpp

bin/MessageFrame.o: src/MessageFrame.cpp
	g++ $(CFLAGS) bin/MessageFrame.o src/MessageFrame.cpp

bin/ReceiptFrame.o: src/ReceiptFrame.cpp
	g++ $(CFLAGS) bin/ReceiptFrame.o src/ReceiptFrame.cpp

bin/SendFrame.o: src/SendFrame.cpp
	g++ $(CFLAGS) bin/SendFrame.o src/SendFrame.cpp

bin/SubscribeFrame.o: src/SubscribeFrame.cpp
	g++ $(CFLAGS) bin/SubscribeFrame.o src/SubscribeFrame.cpp

bin/UnsubscribeFrame.o: src/UnsubscribeFrame.cpp
	g++ $(CFLAGS) bin/UnsubscribeFrame.o src/UnsubscribeFrame.cpp

.PHONY: clean
clean:
	rm -f bin/*
	